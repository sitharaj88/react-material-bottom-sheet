{
  "name": "react-material-bottom-sheet",
  "version": "1.0.1",
  "description": "A React component library for Material Design bottom sheets",
  "main": "./dist/react-material-bottom-sheet.umd.cjs",
  "module": "./dist/react-material-bottom-sheet.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-material-bottom-sheet.js",
      "require": "./dist/react-material-bottom-sheet.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -b tsconfig.lib.json",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "playwright test",
    "docs:dev": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "docs:deploy": "cd docs && npm run deploy"
  },
  "keywords": [
    "react",
    "bottom-sheet",
    "material-design",
    "typescript",
    "component",
    "modal",
    "drawer",
    "sheet",
    "ui",
    "mobile",
    "touch",
    "drag",
    "gesture",
    "snap",
    "accessibility",
    "a11y"
  ],
  "author": "sitharaj88",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sitharaj88/react-material-bottom-sheet.git"
  },
  "bugs": {
    "url": "https://github.com/sitharaj88/react-material-bottom-sheet/issues"
  },
  "homepage": "https://sitharaj88.github.io/react-material-bottom-sheet",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.test.json"
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
